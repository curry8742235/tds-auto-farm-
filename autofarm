-- // CONFIGURATION 
getgenv().AutoStrat = true
getgenv().AutoSkip = true 
getgenv().AutoPickups = true
getgenv().Webhook = "" 

-- // 1. LOAD LIBRARY
local libURL = "https://gist.githubusercontent.com/curry8742235/38ad26d4b4b3373a9b7b21bf59d14015/raw/85d4d1a32dd0f37fb9e2766bcaf97480cdf121c7/library"
local success, TDS = pcall(function() return loadstring(game:HttpGet(libURL))() end)

if not success or not TDS then
    warn("Gist failed, using backup library...")
    TDS = loadstring(game:HttpGet("https://raw.githubusercontent.com/DuxiiT/auto-strat/refs/heads/main/Library.lua"))()
end

if not TDS then return warn("CRITICAL: Library failed to load.") end

-- // 2. MAP ADAPTATION & SNIPER LOGIC
local Workspace = game:GetService("Workspace")
local LocalPlayer = game:GetService("Players").LocalPlayer

-- Helper to find Map Center
local function GetMapAnchor()
    local map = Workspace:FindFirstChild("Map")
    if not map then return Vector3.zero end

    if map:FindFirstChild("EnemySpawn") then return map.EnemySpawn.Position end

    local paths = map:FindFirstChild("Paths")
    if paths then
        local targets = {"0", "1", "Path", "Path1", "Main"}
        for _, t in ipairs(targets) do
            local obj = paths:FindFirstChild(t)
            if obj then
                if obj:IsA("BasePart") then return obj.Position end
                if obj:IsA("Folder") or obj:IsA("Model") then
                    local p = obj:FindFirstChild("0") or obj:FindFirstChild("1") or obj:FindFirstChildWhichIsA("BasePart")
                    if p then return p.Position end
                end
            end
        end
    end
    return Vector3.zero
end

-- "Sniper" Raycast (Now checks for valid ground)
local function GetValidFloor(x, z, startHeight)
    local origin = Vector3.new(x, startHeight + 100, z) 
    local direction = Vector3.new(0, -300, 0) 
    
    local params = RaycastParams.new()
    params.FilterType = Enum.RaycastFilterType.Exclude
    params.FilterDescendantsInstances = {
        LocalPlayer.Character,
        Workspace:FindFirstChild("Towers"),
        Workspace:FindFirstChild("Camera"),
        Workspace:FindFirstChild("Pickups"),
        Workspace:FindFirstChild("Map") and Workspace.Map:FindFirstChild("Paths") -- Ignore Paths to hit ground underneath? No, paths are solid.
    }

    local result = Workspace:Raycast(origin, direction, params)
    
    if result and result.Instance then
        -- Check if we hit a path/road (Invalid placement)
        if result.Instance.Name == "Path" or result.Instance.Parent.Name == "Paths" then
            -- warn("⚠️ Position is on a Path! Attempting to nudge...")
            return nil -- Return nil to signify invalid spot
        end
        return result.Position.Y
    end
    return nil
end

-- // 3. CALCULATE OFFSETS
local RecAnchor = Vector3.new(-48.8, 3.8, 14.5) 
local CurAnchor = GetMapAnchor()
local MapOffset = Vector3.zero

if CurAnchor.Magnitude > 0 then
    MapOffset = CurAnchor - RecAnchor
    print("[DeepSeek] Map Anchor Found:", CurAnchor)
else
    warn("[DeepSeek] Running Blind (No Anchor Found)")
end

-- Hook Place Function
local oldPlace = TDS.Place
TDS.Place = function(self, name, recX, recY, recZ)
    local targetX = recX + MapOffset.X
    local targetZ = recZ + MapOffset.Z
    
    -- Sniper Logic
    local floorY = GetValidFloor(targetX, targetZ, CurAnchor.Y)
    local targetY
    
    if floorY then
        -- IMPORTANT: Add +1.5 studs so it doesn't clip into the floor
        targetY = floorY + 1.5
    else
        -- Fallback if raycast fails or hits a path
        -- We try to preserve the relative height from the original strat
        local relativeY = recY - RecAnchor.Y
        targetY = CurAnchor.Y + relativeY + 1.5 
    end
    
    return oldPlace(self, name, targetX, targetY, targetZ)
end

print("--- WAITING FOR GAME LOAD ---")
if not game:IsLoaded() then game.Loaded:Wait() end
task.wait(2) -- Give time for money to load

-- // 4. STRATEGY EXECUTION
print("--- STARTING PLACEMENTS ---")

